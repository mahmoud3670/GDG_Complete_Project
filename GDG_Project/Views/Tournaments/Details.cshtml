@model GDG_Project.Models.Tournaments

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@Model.MemberImg" alt="User profile picture"></center>
                        <h3 class="profile-username text-center">@Model.MemberInfoNavigation.PName</h3>
                        <p class="text-muted text-center">بطوله @Model.TourName </p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>النشاط  </b> <b class="pull-left">@Model.Act.ActName</b>
                            </li>
                            <li class="list-group-item">
                                <b>المركز  </b> <b class="pull-left">@Model.MemberLevel</b>
                            </li>
                            <li class="list-group-item">
                                <b>تاريخ البطوله</b> <b class="pull-left">@Model.TourDate.ToString("dd/MM/yyyy")</b>
                            </li>
                            <li class="list-group-item">
                                <h3> الوصف</h3>
                                <p>
        @Model.TourDescription
                                </p>
                            </li>


                        </ul>

                    </div>
                    <!-- /.box-body -->
                    <hr />

                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

   