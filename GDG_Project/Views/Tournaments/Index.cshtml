@model IEnumerable<GDG_Project.Models.PersonInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">البطولات </h3>
                        <a  asp-action="Create"><button type="button" class="btn btn-primary" style="float:left">اضافه بطوله </button></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th># </th>
                                    <th>الاسم</th>
                                    <th>عدد البطولات </th>
                                    <th>تاريخ اخر مسابقه </th>
                                    <th>الاختيارات</th>
                                </tr>
                            </thead>
                            <tbody>


                              
                                            @foreach (var item in Model)
                                            {
                                              <tr>
                                               <td>@item.PId</td>
                                               <td>@item.PName</td>
                                               <td>@item.Tournaments.Count() بطوله </td>
                                               <td>@item.Tournaments.Select(x => x.TourDate).LastOrDefault().ToString("dd/MM/yyyy")</td>
                                               <td> &nbsp &nbsp <a asp-action="ViewTour" asp-route-id="@item.PId" ><i class="far fa-eye"></i></a>
                                                </tr>
                                            }
                                


                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

