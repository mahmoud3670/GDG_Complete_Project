@model GDG_Project.Models.PersonInfo

@{
    ViewData["Title"] = "ViewTour";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}



<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@Model.PImg" alt="User profile picture"></center>
                        <h3 class="profile-username text-center">@Model.PName</h3>
                        <p class="text-muted text-center">@Model.Tournaments.Count()</p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>رقم العضو </b> <b class="pull-left">@Model.PId</b>
                            </li>
                            <li class="list-group-item">
                                <b>تاريخ اخر بطوله</b> <b class="pull-left">@Model.Tournaments.Select(x=>x.TourDate).LastOrDefault().ToString("dd/MM/yyyy")</b>
                            </li>


                        </ul>

                    </div>
                    <!-- /.box-body -->
                    <hr />
                    <div class="box-body table-responsive no-padding">
                        @if (ViewBag.Tour == null)
                        {
                            <h1>ناسف لا يوجد بطولات </h1>
                        }
                        else
                        {
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th> اسم المسابقه</th>
                                        <th> المركز</th>
                                        <th>تاريخ البطوله</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.Tour)
                                    {
                                        <tr>

                                            <td> @item.TourName</td>
                                            <td> @item.MemberLevel  </td>
                                            <td>@item.TourDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                &nbsp &nbsp <a asp-action="Details" asp-route-id="@item.TourId"><i class="far fa-eye"></i></a>
                                               
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }

                    </div>
                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
