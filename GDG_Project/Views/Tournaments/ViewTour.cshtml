@model IEnumerable<GDG_Project.Models.Tournaments>

@{
    ViewData["Title"] = "ViewTour";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<h1>ViewTour</h1>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@ViewBag.personInfo.PImg" alt="User profile picture"></center>
                        <h3 class="profile-username text-center">@ViewBag.personInfo.PName</h3>
                        <p class="text-muted text-center">1@*@ViewBag.personInfo.Tournaments.Count()*@</p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>رقم العضو </b> <b class="pull-left">@ViewBag.personInfo.PId</b>
                            </li>
                            <li class="list-group-item">
                                <b>تاريخ اخر بطوله</b> <b class="pull-left">01/01/2019@*@ViewBag.personInfo.Tournaments.Select("TourDate").LastOrDefault()*@</b>
                            </li>


                        </ul>

                    </div>
                    <!-- /.box-body -->
                    <hr />
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th> اسم المسابقه</th>
                                    <th> المركز</th>
                                    <th>تاريخ البطوله</th>
                                    <th> #</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                            @foreach (var item in Model)
                                            {
                                                <tr>

                                                <td> @item.TourName</td>
                                              <td> @item.MemberLevel  </td>
                                               <td>@item.TourDate.ToString("dd/MM/yyyy")</td>
                                               <td> &nbsp &nbsp <a asp-action="ViewTour" asp-route-id="@item.TourId"><i class="far fa-eye"></i></a>
                                                   &nbsp &nbsp <a asp-action="Edit" asp-route-id="@item.TourId"><i class="fas fa-pencil-alt"></i></a></td>
                                                </tr>
                                            }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
