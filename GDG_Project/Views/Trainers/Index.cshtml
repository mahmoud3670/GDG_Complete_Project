@model IEnumerable<GDG_Project.Models.PersonInfo>

@{
    ViewData["Title"] = "TrainerActivties";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> انشطه المدربين </h3>
                        <a asp-controller="Trainers" asp-action="Create"><button type="button" class="btn btn-primary" style="float:left">اضافه نشاط مدرب </button></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>اسم المدرب</th>
                                    <th> عدد الانشطه </th>
                                    <th>الاختيارات</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PId</td>
                                        <td> @item.PName </td>
                                        <td> @item.Trainer.Where(x => x.TrainerActive == x.Active).Count()</td>
                                        <td> &nbsp &nbsp <a asp-controller="Trainers" asp-action="Details" asp-route-id="@item.PId"><i class="far fa-eye"></i></a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>