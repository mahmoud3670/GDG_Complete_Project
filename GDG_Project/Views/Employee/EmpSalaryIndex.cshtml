@model IEnumerable<GDG_Project.Models.EmpSalary>

@{
    ViewData["Title"] = "EmpSalaryIndex";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}



<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">مرتبات الموظفين </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th> </th>
                                    <th>اسم الموظف</th>
                                    <th>الراتب </th>
                                    <th>التاريخ</th>
                                    <th>الاختيارات</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                    <td>@item.SalaryId</td>
                                    <td>@item.Emp.EmpInfoNavigation.PName</td>
                                   <td> @item.Salary</td>
                                   <td> @item.SalaryDate.ToString("dd/MM/yyyy") </td>
                                   <td> &nbsp &nbsp <a asp-action="SalaryView" asp-route-id="@item.SalaryId"><i class="far fa-eye"></i></a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

