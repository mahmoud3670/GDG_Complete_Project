@model GDG_Project.Models.EmpSalary

@{
    ViewData["Title"] = "SalaryView";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@ViewBag.empinfo.EmpInfoNavigation.PImg" alt="User profile picture"></center>
                        <h3 class="profile-username text-center"> @ViewBag.empinfo.EmpInfoNavigation.PName</h3>
                        <p class="text-muted text-center"> مرتب شهر : @Model.SalaryDate.ToString("dd/MM/yyyy")</p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>عدد ايام الحضور  </b> <b class="pull-left">@ViewBag.absentCount</b>
                            </li>
                            <li class="list-group-item">
                                <b>الخصومات  </b> <b class="pull-left">@(( Convert.ToDouble(Model.Salary))- (Convert.ToDouble(ViewBag.empinfo.EmpSalary)))</b>
                            </li>
                            <li class="list-group-item">
                                <b> الراتب </b> <b class="pull-left">@ViewBag.empinfo.EmpSalary</b>
                            </li>
                            <li class="list-group-item">
                                <b> صافي الراتب </b> <b class="pull-left">@Model.Salary</b>
                            </li>
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th> يوم</th>
                                            <th> توقيت الدخول</th>
                                            <th> توقيت الخروج</th>
                                            <th> ملاحظات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       @foreach (var item in ViewBag.absent)
                                       {
                                        <tr>
                                            <td>@item.TimeDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.TimeIn</td>
                                            <td>@item.TimeOut</td>
                                            <td>@item.NoteCase</td>
                                        </tr>
                                       }
                                       
                                    </tbody>
                                </table>
                            </div>


                        </ul>

                    </div>
                    <!-- /.box-body -->
                    <hr />

                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>










