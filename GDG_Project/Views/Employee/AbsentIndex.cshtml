@model IEnumerable<GDG_Project.Models.TimeMachine>

@{
    ViewData["Title"] = "AbsentIndex";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}



<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">حضور وانصراف :@ViewBag.EmpID.EmpInfoNavigation.PName.</h3>
                    </div>
                  
                        <a asp-action="AbsentNote" asp-route-id="@ViewBag.EmpID.EmpId"><button type="button" class="btn btn-primary" style="float:left">ملاحظات </button></a>
                        <!-- /.box-header -->
                        <div class="box-body">

                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>التاريخ </th>
                                        <th>توقيت الدخول</th>
                                        <th>توقيت الخروج </th>
                                        <th>ملاحظات</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td> @item.TimeDate.ToString("dd/MM/yyyy")  </td>
                                            <td> @item.TimeIn  </td>
                                            <td>@item.TimeOut</td>
                                            <td>
                                                @(item.NoteCase == null ? "حضور" : item.NoteCase)
                                            </td>
                                        </tr>
                                    }


                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

