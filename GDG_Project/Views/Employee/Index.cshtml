@model IEnumerable<GDG_Project.Models.Employees>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">العاملين</h3>
                        <a asp-action="CreateEmp"><button type="button" class="btn btn-primary" style="float:left">اضافه موظف </button></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>المسلسل </th>
                                    <th>الاسم</th>
                                    <th>الهاتف </th>
                                    <th>الحاله</th>
                                    <th>الاختيارات</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                    <td>@item.EmpId</td>
                                   <td> @item.EmpInfoNavigation.PName</td>
                                   <td>@item.EmpInfoNavigation.PPhone </td>
                                   <td>@(item.EmpActive==item.active?"فعال":"متوقف") </td>
                                   <td> &nbsp &nbsp <a asp-action="Details" asp-route-id="@item.EmpId"><i class="far fa-eye"></i></a>
                                        &nbsp &nbsp <a asp-action="updateEmp" asp-route-id="@item.EmpId"><i class="fas fa-pencil-alt"></i></a>
                                        &nbsp &nbsp <a asp-action="AbsentIndex" asp-route-id="@item.EmpId"><i class="fab fa-algolia"></i></a>
                                   </td>
                                    </tr>
                                }



                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

