@model GDG_Project.Models.Activates

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@Model.ActImg" alt="User profile picture"></center>
                        <h3 class="profile-username text-center"> @Model.ActName</h3>
                        <p class="text-muted text-center">@(Model.ActActive==Model.Active?"فعال":"متوقف")</p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>الرقم</b> <b class="pull-left">@Model.ActId</b>
                            </li>
                            <li class="list-group-item">
                                <b>عدد المشتركين</b> <b class="pull-left">0@*Model.Members.Count(x => x.MemberAct == Model.ActId)*@</b>
                            </li>


                        </ul>
                        <a  asp-action="Edit" asp-route-id="@Model.ActId" class="btn btn-primary btn-block"><b>تعديل</b></a>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
