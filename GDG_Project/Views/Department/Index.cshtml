@model IEnumerable<GDG_Project.Models.Department>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_BackeLayout.cshtml";
    }


    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">الاقسام </h3>
                            <a asp-action="Create"><button type="button" class="btn btn-primary" style="float:left">اضافه قسم </button></a>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>المسلسل </th>
                                        <th>الاسم</th>
                                        <th>الاختيارات</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DepId</td>
                                            <td> @item.DepName</td>
                                            <td>
                                                &nbsp &nbsp

                                                <a asp-action="Edit" asp-route-id="@item.DepId"><i class="fas fa-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>