@inject GDGContext _GDGContext;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Star Acadmi</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" href="~/lib/dist/img/football/logo.jpg">
    <!-- Font Awesome -->
    <link href="~/lib/fontawesome-free-5.3.1-web/css/all.min.css" rel="stylesheet">

    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/css/footer-distributed-with-address-and-phones.css"> -->
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/dist/css/AdminLTE.min.css">
    <!-- Theme of profil page -->
    <link rel="stylesheet" href="~/lib/dist/css/profile.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
             folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/lib/dist/css/skins/_all-skins.min.css">
    <!-- Bootstrap 3.3.4 -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link href="~/lib/bootstrap/css/styles.css" rel="stylesheet">
    <!--footer-->
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/css/footer-distributed-with-address-and-phones.css"> -->
    <!--End footer-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header>





        <nav nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-example"
                            aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index">

                      
                        <img src="~/img/ActImg/ElameedLogo.jpg" style="width:200px;height:55px"/>
                    </a> <!-- navbar-brand -->
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-example">
                    <ul class="nav navbar-nav navbar-right" role="tablist">

                        <li>
                            <form class="navbar-form" role="search" asp-controller="Home" asp-action="search" method="get">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="بحث عن مشترك" name="name">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </li>
                        <li><a class="mune" asp-controller="Home" asp-action="Index">الرئيسيه</a></li>
                        <li><a a class="mune" asp-controller="Home" asp-action="News">الاخبار</a></li>
                        <li><a a class="mune" asp-controller="Home" asp-action="contact">تواصل معنا</a></li>


                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                جدول
                                المدارس <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                  @{
                                    ViewBag.activty = _GDGContext.Activates.Where(x => x.ActActive == true).ToList(); 
                                    }
                                    @foreach (var item in ViewBag.activty)
                                    {
                                    <li><a asp-action="ActView" asp-route-id="@item.ActId">@item.ActName</a></li>
                                }

                            </ul>
                        </li>

                    </ul>

                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>





    </header>


    <div class="container">

        @if (ViewBag.welcom == "done")
        {
            <div class="alert alert-success alert-dismissible" id="myAlert">
                <a href="#" class="close">&times;</a>
                <center> <strong>شكرا!</strong> علي تواصلكم معنا.</center>
            </div>
        }
        else if (ViewBag.welcom == "notDone")
        {
            <div class="alert alert-danger alert-dismissible" id="myAlert">
                <a href="#" class="close">&times;</a>
                <center> <strong>من فضلك!</strong> ادخل بيانات صحيحه.</center>
            </div>
        }
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-distributed section-padding main-bgcolor">
        <div class="container" style="text-align:center">





            <div class="col-md-4">
                <h3 class="mt-0">ELA<span>meed</span> </h3>
                <p class="footer-company-name">ELAmeed &copy; 2019</p>
            </div>
            <div class="col-md-4">
                <h3 class="mt-0">عنوان الشركه  </h3>
                <div>
                    <i class="fa fa-map-marker"></i>
                    شبراالخيمه

                </div>

                <div>
                    <i class="fa fa-phone"></i>
                    <span>Egy +201111393945</span>
                </div>
                <div>
                    <i class="fa fa-phone"></i>
                    <span>Egy +201227222733</span>
                </div>


                @*<div>
                <i class="fa fa-envelope"></i>
                <span><a href="mailto:support@company.com">support@master.com</a></span>
            </div>*@
            </div>
            <div class="col-md-4">
                <div class="footer-company-about">
                    <h3 class="mt-0">كـ /سـامح خـليل</h3>
                    <p>
                        مـدرب و عضـو نقابة المهن الـرياضيـة
                    </p>
                </div>

                <div class="footer-icons">

                    <a href="#" class="fb"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="tw"><i class="fab fa-twitter "></i></a>
                    <a href="#" class="lk"><i class="fab fa-linkedin "></i></a>
                    <a href="#" class="gt"><i class="fab fa-github"></i></a>

                </div>
            </div>

        </div>
    </footer>

    <script src="~/lib/bootstrap/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/js/jquery.magnific-popup.min.js"></script>
    <script src="~/lib/bootstrap/js/jquery.nicescroll.js"></script>
    <script src="~/lib/bootstrap/js/custmes.js"></script>
    <script src="~/lib/bootstrap/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <script>
        $(document).ready(function () {
            $(".close").click(function () {
                $("#myAlert").alert("close");
            });
        });
    </script>



</body>
</html>
