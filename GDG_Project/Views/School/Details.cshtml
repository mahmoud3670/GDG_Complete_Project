@model GDG_Project.Models.School

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@Model.SchoolActNavigation.ActImg" alt="User profile picture"></center>
                        <h3 class="profile-username text-center"> @Model.SchoolName </h3>
                        <p class="text-muted text-center">@(Model.SchoolActive == Model.Active ? "فعال" : "متوقف")</p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>الرقم</b> <b class="pull-left">@Model.SchoolId</b>
                            </li>
                            <li class="list-group-item">
                                <b>عدد المشتركين</b> <b class="pull-left">@Model.SchoolMemberCount</b>
                            </li>
                            <li class="list-group-item">
                                <b>تاريخ البدايه</b> <b class="pull-left">@Model.SchoolStartDay.ToString("dd/MM/yyyy")</b>
                            </li>
                            <li class="list-group-item">
                                <b>تاريخ النهايه</b> <b class="pull-left">@Model.SchoolEndDay.ToString("dd/MM/yyyy")</b>
                            </li>
                            </li>
                            <li class="list-group-item">
                                <b> المواعيد</b> <b class="pull-left">@Model.SchoolDays</b>
                            </li>



                        </ul>
                        <a asp-action="Edit" asp-route-id="@Model.SchoolId" class="btn btn-primary btn-block"><b>تعديل</b></a>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box-body -->
                --
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

