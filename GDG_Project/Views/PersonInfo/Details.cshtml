@model GDG_Project.Models.PersonInfo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}



<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <!-- /.box-header -->
                <!-- Profile Image -->
                <div class="box box-primary ">
                    <div class="box-body ">
                        <center> <img class=" mx-auto d-block img-responsive img-circle" src="@Model.PImg" alt="@Model.PName" style="height:50vh"></center>
                        <h3 class="profile-username text-center">@Model.PName</h3>
                        <p class="text-muted text-center">@(Model.PType == Model.TrainerLabel ? "مدرب" : (Model.PType == Model.MembersLabel ? "متدرب" : "موظف")) </p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>ID</b> <b class="pull-left">@Model.PId</b>
                            </li>
                            <li class="list-group-item">
                                <b>السن</b> <b class="pull-left">@(DateTime.Now.Year - Model.PBirthDate.Year)</b>
                            </li>
                            <li class="list-group-item">
                                <b>العنوان</b> <b class="pull-left">@Model.PAdress</b>
                            </li>
                            <li class="list-group-item">
                                <b>تليفون</b> <b class="pull-left">@Model.PPhone</b>
                            </li>
                            <li class="list-group-item">
                                <b>الرقم القومي</b> <b class="pull-left">@Model.PNationalId</b>
                            </li>

                        </ul>
                        <a asp-action="Edit" asp-route-id="@Model.PId" class="btn btn-primary btn-block"><b>تعديل</b></a>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>





