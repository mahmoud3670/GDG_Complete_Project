@model IEnumerable<GDG_Project.Models.PersonInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">الاعضاء</h3>
                        <a asp-action="Create"><button type="button" class="btn btn-primary" style="float:left">اضافه عضو </button></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>المسلسل </th>
                                    <th>الاسم</th>
                                    <th>الهاتف </th>
                                    <th>المستوي</th>
                                    <th>الاختيارات</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PId</td>
                                        <td>@item.PName</td>
                                        <td>@item.PPhone </td>
                                        <td>@(item.PType==item.TrainerLabel?"مدرب":(item.PType == item.MembersLabel?"متدرب":"موظف")) </td>
                                        <td>
                                            &nbsp &nbsp
                                            <a asp-action="Details" asp-route-id="@item.PId"><i class="far fa-eye"></i></a>
                                            &nbsp &nbsp
                                            <a asp-action="Edit" asp-route-id="@item.PId"><i class="fas fa-pencil-alt"></i></a>
                                        </td>
                                    </tr>
                                    }



                                </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>







                  