@model GDG_Project.Models.Activates

@{
    ViewData["Title"] = Model.ActName;
}

<div class="container"dir="rtl">
    <div class="jumbotron">
        <h2>@Model.ActName</h2>
        <div class="row">
            <div class="col-xs-6 col-md-4"><img class="img-responsive" src="@Model.ActImg"></div>
            <div class="col-xs-12 col-sm-6 col-md-8">

                <p>
                    @Html.Raw(Model.ActDescription)
                </p>
            </div>
        </div>
    </div>
    @if (ViewBag.Schools.Count > 0)
    {
        <div class="jumbotron">
            <table class="table table-striped table-bordered table-hover ">
                <thead>
                    <tr class="primary" style="background-color: rgb(101, 208, 250); color: #fff">
                        <th class="text-center"> اسم المدرسه </th>
                        <th class="text-center"> تاريخ بدايه المدرسه </th>
                        <th class="text-center"> تاريخ نهايه المدرسه </th>
                        <th class="text-center"> المستوي </th>
                        <th class="text-center">الايام</th>
                        <th class="text-center">قيمه الاشتراك</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in ViewBag.Schools)
                    {
                    <tr class="text-center">
                        <td> @item.SchoolName</td>
                        <td> @item.SchoolStartDay.ToString("dd/MM/yyyy")</td>
                        <td> @item.SchoolEndDay.ToString("dd/MM/yyyy")</td>
                        <td> @item.SchoolLevel</td>
                        <td> @item.SchoolDays</td>
                        <td> @item.SchoolPrice</td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="jumbotron">
            <p>
                عفوا لا يوجد مدارس متاحه لهذا النشاط حاليا
            </p>
        </div>
    }
        </div>

