@model GDG_Project.Models.News

@{
    ViewData["Title"] = "NewsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <section class="content" dir="rtl">
        <div class="row">
            <div class="col-xs-12">
                @*<div class="box">*@
                    <div class="box-header">
                        <h1 class="box-title"> @Model.NewsTitle </h1>
                      
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <div class="jumbotron">
                            <div class="container">
                                <center><img src="@Model.NewsImg" alt="@Model.NewsTitle" class="img-rounded" style="height:50vh; width:100%"></center>
                                <h1>@Model.NewsTitle</h1>

                                <p>
                                    @Html.Raw(Model.NewsContent)
                                </p>
                                <h6>عدد المشاهدات:@Model.NewsNviwer  </h6>
                                <h6>تاريخ النشر :@Model.NewsDate.ToString("dd/MM/yyyy") </h6>

                            </div>
                        </div>


                    </div>
                    <!-- /.box-body -->
                @*</div>*@
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
