@model GDG_Project.Models.ContactUs
@{
    ViewData["Title"] = "Contact";
}

<div class="contact section-padding">
    <div class="container" dir="rtl">

        <section class="wow fadeInUp" data-wow-duration="5s" data-wow-delay=".2s">

            <form class="form-horizontal" id="test-form1" method="post" asp-controller="HomeController" asp-action="Contact">
                <fieldset>
                    <legend>تواصل معنا </legend>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span asp-validation-for="AnonymsName" class="text-danger"></span>
                        <div class="col-lg-10">
                            <input asp-for="AnonymsName" type="text" class="form-control" placeholder="الاسم" required />
                        </div>
                        <label asp-for="AnonymsName" class="col-lg-2 control-label">الاسم</label>


                    </div>
                    <div class="form-group">
                        <span asp-validation-for="AnonymsEmail" class="text-danger"></span>
                        <div class="col-lg-10">
                            <input asp-for="AnonymsEmail" type="email" class="form-control" id="email"  placeholder="example-domain.com">
                        </div>
                        <label for="email" class="col-lg-2 control-label">البريد الالكتروني </label>

                    </div>
                    <div class="form-group">
                        <span asp-validation-for="AnonymsPhone" class="text-danger"></span>
                        <div class="col-lg-10">
                            <input class="form-control" id="phone" asp-for="AnonymsPhone"  type="tel" placeholder="*******01" required>
                        </div>
                        <label asp-for="AnonymsPhone"  class="col-lg-2 control-label">رقم الهاتف </label>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="AnonymsName" class="text-danger"></span>
                        <div class="col-lg-10">
                            <textarea asp-for="AnonymsMessage"  class="form-control" rows="3" id="textArea" placeholder="Enter your massage" required></textarea>
                        </div>
                        <label asp-for="AnonymsMessage" class="col-lg-2 control-label">Message</label>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </section>
    </div>
</div>
