@model GDG_Project.Models.ContactUs

@{
    ViewData["Title"] = "ReadContactUs";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}



<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h1 class="box-title"> من:@Model.AnonymsName </h1>
                        &nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp
                        <a asp-action="DeleteContactUs" asp-route-id="@Model.MessageId"><i class="fas fa-trash-alt "></i></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <div class="jumbotron">
                            <div class="container">
                                <p>البريد الالكتروني :@Model.AnonymsEmail</p>
                                <p>الهاتف : @Model.AnonymsPhone</p>
                                <p>@Model.AnonymsMessage</p>
<h6>@Model.MessageDate.ToString("hh:mm - dd/MM/yyyy")</h6>
                            </div>
                        </div>


                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
