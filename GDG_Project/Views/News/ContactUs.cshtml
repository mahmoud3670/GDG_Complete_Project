@model IEnumerable<GDG_Project.Models.ContactUs>

@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">الشكاوي</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>اسم الراسل</th>
                                    <th>الشكوي </th>
                                    <th>التاريخ</th>
                                    <th>الحاله</th>
                                    <th>الاختيارات</th>
                                </tr>
                                
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>

                                    <td> @item.AnonymsName </td>
                                    <td> @(item.AnonymsEmail != null ? item.AnonymsEmail : "لايوجد") </td>
                                    <td> @item.MessageDate.ToString("dd/MM/yyyy") </td>
                                    <td> @(item.Opend?"تمت القراءه":"غير مقروءه") </td>
                                    <td>
                                        <a asp-action="DeleteContactUs" asp-route-id="@item.MessageId"><i class="fas fa-trash-alt "></i></a>
                                        &nbsp &nbsp
                                        <a asp-action="ReadContactUs" asp-route-id="@item.MessageId"><i class="far fa-eye"></i></a>
                                    </td>
                                </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


