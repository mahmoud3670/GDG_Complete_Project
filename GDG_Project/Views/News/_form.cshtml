@model GDG_Project.Models.News

@if (ViewData["Title"].ToString() == "Edit")
{
    <input type="hidden" asp-for="NewsId" />
    @*<input type="hidden" asp-for="NewsDate" />
        <input type="hidden" asp-for="NewsImg" />*@
}

<div class="form-group">
    <label asp-for="NewsTitle" class="control-label">عنوان المقال</label>
    <input asp-for="NewsTitle" type="text" class="form-control" placeholder="عنوان المقال" required />
    <span asp-validation-for="NewsTitle" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">صوره المقال</label>
    <input class="form-control" type="file" accept=".jpg,.png" name="files" @(ViewData["Title"].ToString() == "Edit" ? "" : "required") />
    <span asp-validation-for="NewsImg" class="text-danger"></span>
</div>


<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title"> <label asp-for="NewsContent" class="control-label">المقال</label></h3>
        <!-- tools box -->
        <div class="pull-right box-tools">
            <button class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>

        </div>
        <!-- /. tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body pad">
        <textarea asp-for="NewsContent" cols="80" id="editor1" rows="10" data-sample-short" required></textarea>

    </div>
    <span asp-validation-for="NewsContent" class="text-danger"></span>
</div>


<div class="form-group">

    <input type="submit" @Html.Raw(ViewData["Title"].ToString() == "Edit" ? "value=' تعديل '" : "value='اضافه'") class="btn btn-primary" />

</div>

<script src="~/lib/ckeditor/ckeditor.js">
</script>
<script>
    CKEDITOR.replace('editor1');
</script>
