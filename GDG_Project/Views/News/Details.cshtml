@model GDG_Project.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BackeLayout.cshtml";
}




<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h1 class="box-title"> @Model.NewsTitle </h1>
                        &nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp
                        <a asp-action="Edit" asp-route-id="@Model.NewsId"><i class="fas fa-pencil-alt fa-2x" title="تعديل"></i></a>&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp
                        <a asp-action="Delete" asp-route-id="@Model.NewsId" onclick="return confirm('are you want')"><i class="fas fa-trash-alt fa-2x "></i></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <div class="jumbotron">
                            <div class="container">
                             <center><img src="@Model.NewsImg" alt="@Model.NewsTitle" class="img-rounded" style="height:50vh; width:50%" ></center>   
                                <h1>@Model.NewsTitle</h1>

                                <p>
                                    @Html.Raw(Model.NewsContent)
                                </p>
                                <h6>عدد المشاهدات:@Model.NewsNviwer  </h6>
                                <h6>تاريخ النشر :@Model.NewsDate.ToString("dd/MM/yyyy") </h6>

                            </div>
                        </div>


                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
